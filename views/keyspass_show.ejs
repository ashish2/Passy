<html>
<head>
	<link rel="stylesheet" href="/libs/bootstrap-3.2.0/css/bootstrap.min.css">
</head>
<body>
	<div class="container">

		<!-- MENU -->
			<!-- menu navbar -->
		<nav class="navbar navbar-default" role="navigation">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a href="" class="navbar-brand" title="User/Pass Sf">
					User/Pass Sf
				</a>
			</div>
			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse navbar-ex1-collapse">
				<ul class="nav navbar-nav navbar-left">
					<li class="dropdown">
						<a data-toggle="dropdown" class="dropdown-toggle" href="#" title="">
							SecretQuestion
							<b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li>
								<a href="/secretquestion" title="">
									<i class="glyphicon glyphicon-list"></i>
									List and Add a Secret Question
								</a>
							</li>
						</ul>
					</li>
				</ul>

				<ul class="nav navbar-nav navbar-left">
					<li class="dropdown">
						<a data-toggle="dropdown" class="dropdown-toggle" href="#" title="SecretAnswer">
							SecretAnswer
							<b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li>
								<a href="/secretanswer" title="SA List">
									<i class="glyphicon glyphicon-list"></i>
									List your given answers
								</a>
							</li>
						</ul>
					</li>
				</ul>


				<ul class="nav navbar-nav navbar-left">
					<li class="dropdown">
						<a data-toggle="dropdown" class="dropdown-toggle" href="#" title="UserPass">
							UserPass
							<b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li>
								<a href="/keyspass" title="">
									<i class="glyphicon glyphicon-list"></i>
									List and Add User/Pass
								</a>
							</li>
						</ul>
					</li>
				</ul>

				
				<form class="navbar-form navbar-right" role="search" action="/search">
					<div class="form-group">
						<div class="input-group">
							<input id="nav-search" title="Search..." type="text" class="form-control pull-right" name="q" placeholder="Search...">
							<span class="input-group-btn width-auto">
								<button type="submit" class="btn btn-default">
									<span id="nav-sub-btn-span" class="glyphicon glyphicon-search"></span>
								</button>
							</span>
							</div>
					</div>
				</form>

			</div><!-- /.navbar-collapse -->
		</nav>

		<div class="row">
			<div class="col-sm-12">

			<h1 id="page-title"><%= title %></h1>

			<div>
				<form action="/keyspass/create" method="post" accept-charset="utf-8">

					<h5>
						Add more user passes:
					</h5>

					Site: <input name="site">
					<br />
					Username: <input name="username">
					<br />
					Email: <input name="email">
					<br />
					Pass: <input name="pass"> 
					<br />
					
					<!--
					Site: <input name="site">
					<br />
					Username: <input name="username">
					<br />
					Email: <input name="email">
					<br />
					Pass: <input name="pass"> 
					<br />
					-->
					
					<input type="submit">
					
				</form>
			</div>

				<div id="list">
					<div class="item">
						<table class="table">
							<tr>
								<th>
									Sitename
								</th>
								<th>
									Username
								</th>
								<th>
									Email
								</th>
								<th>
									Pass
								</th>
							</tr>
							<% kp.forEach( function ( kp ){ %>
									<tr>
										<td>
											<a class="update-link" href="/keyspass/edit/<%= kp._id %>" title="Update this kp item"><%= kp.site %></a>
										</td>
										<td>
											<%= kp.username %>
										</td>
										<td>
											<%= kp.email %>
										</td>
										<td>
											<%= kp.pass %>
										</td>
									</tr>
							<% }); %>
						</table>
					</div>
				</div>

			</div>
		</div>

	</div>
	<script src="/javascripts/libs/jquery-1.9.1.min.js"></script>
	<script src="/libs/bootstrap-3.2.0/js/bootstrap.min.js"></script>
</body>
</html>
